# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Support Group Configuration
# The chat ID of the group where support messages will be forwarded
# To get the group ID:
# 1. Add your bot to the support group
# 2. Send a message in the group
# 3. Visit: https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
# 4. Look for the "chat" object and copy the "id" value (it will be negative for groups)
SUPPORT_GROUP_ID=-1001234567890
FORWARD_SUPPORT_TO_GROUP=false

# Flask Web App
# Set a strong secret key in production
SECRET_KEY=change-me
# Optionally override DB (defaults to sqlite:///instance/support_system.db)
# Example for Postgres: postgresql+psycopg2://user:pass@host:5432/dbname
# DATABASE_URL=sqlite:///instance/support_system.db

# Service URLs and timeouts
# Internal URL used by the bot to reference the web dashboard
WEB_DASHBOARD_URL=http://web:5001
# Seconds to wait for the web healthcheck at startup (bot only)
WEB_WAIT_TIMEOUT=60

# Escalation timeout in seconds (bot behavior)
ESCALATION_TIMEOUT=900

# Optional: Auto-create initial admin on first run
# Set ADMIN_AUTO_CREATE=true and provide username, email, and password
ADMIN_AUTO_CREATE=false
ADMIN_USERNAME=
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
